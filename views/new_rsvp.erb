<h3>
  <i class="far fa-calendar-day"></i>
  <%= @event[:date] %>
</h3>
<h1>RSVP for <%= @event[:title] %></h1>

<h3>Can you make it?</h3>

<form action="/events/<%= @event[:id] %>/rsvps/create" class="mt-5">
  <div class="form-group">
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="going" value="1">
      <label class="form-check-label">Yes</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="going" value="0">
      <label class="form-check-label">No</label>
    </div>
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" name="comments"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit Response</button>
</form>